# Server
PORT=3000
HOST=0.0.0.0

# Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Database
# Preferred: Individual database variables (container-friendly)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hono_skeleton
DB_USER=postgres
DB_PASSWORD=postgres
# Fallback: Database URL (legacy/simple setups)
DB_URL=postgres://postgres:postgres@localhost:5432/hono_skeleton

# Cache (Valkey - Redis-compatible)
# Preferred: Individual cache variables
VALKEY_HOST=localhost
VALKEY_PORT=6379
# VALKEY_PASSWORD=  # optional
# Fallback: Cache URL (redis:// syntax is acceptable with Valkey)
# VALKEY_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=info

# Environment
NODE_ENV=development