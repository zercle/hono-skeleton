{
  "name": "@zercle/hono-skeleton",
  "version": "0.1.0",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^48.11.0",
    "eslint-plugin-promise": "^7.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.2.21",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch packages/api/src/server.ts",
    "build": "bun build packages/api/src/server.ts --outdir ./dist --target bun",
    "start": "bun dist/server.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun scripts/migrate.ts",
    "db:seed": "bun scripts/seed.ts",
    "lint": "eslint packages/api/src/**/*.ts",
    "format": "prettier --write packages/api/src/**/*.ts"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}