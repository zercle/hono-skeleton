    "zod": "^3.23.8",
    "@hono/zod-openapi": "^0.9.7",
    "@hono/swagger-ui": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "drizzle-kit": "^0.23.1",
    "ts-node": "^10.9.2",
    "@types/bun": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
